<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Welcome Back</h2>

                    @* --- Registration Success Message --- *@
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* --- Login Error Message --- *@
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle me-2"></i> @ViewBag.Error
                        </div>
                    }

                    @* --- Specific Login Error Message (Credential Check) --- *@
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @* This  is important to keep the returnUrl after click 'Login' *@
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                        <div class="mb-3">
                            <label class="form-label">Email address</label>
                            <input name="email" type="email" class="form-control" placeholder="name@example.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input name="password" type="password" class="form-control" placeholder="Enter your password" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="small text-muted mb-0">Don't have an account?</p>
                        <a asp-action="Register" class="fw-bold">Register here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>