@model Smart_Event_Management_and_Ticketing_System.Models.Member

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Join the Community</h2>

                    @* Added Validation Summary to reveal why registration is failing *@
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                        @if (ViewBag.DebugError != null)
                        {
                                <div class="alert alert-warning small">@ViewBag.DebugError</div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-bold">Full Name</label>
                            <input asp-for="Fullname" class="form-control" placeholder="Enter your name" required />
                            <span asp-validation-for="Fullname" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email address</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" required />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Register Now</button>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="small text-muted">Already have an account? <a asp-action="Login" class="fw-bold">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}