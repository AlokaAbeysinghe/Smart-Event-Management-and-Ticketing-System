@model Smart_Event_Management_and_Ticketing_System.Models.Review

@{
    ViewData["Title"] = "Edit Your Review";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Your Experience</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditReview" method="post">
                        @* Hidden fields to keep track of the review and event IDs *@
                        <input type="hidden" asp-for="ReviewId" />
                        <input type="hidden" asp-for="EventId" />
                        <input type="hidden" asp-for="MemberId" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">Update Your Rating</label>
                            <div class="rating-wrapper">
                                @for (int i = 5; i >= 1; i--)
                                {
                                        <input type="radio" id="star-@i" name="Rating" value="@i" @(Model.Rating == i ? "checked" : "") required />
                                        <label for="star-@i">⭐</label>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Update Your Comment</label>
                            <textarea asp-for="Comments" class="form-control" rows="4" required></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
