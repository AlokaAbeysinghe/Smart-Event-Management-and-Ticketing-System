@model Smart_Event_Management_and_Ticketing_System.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    @* --- Status & Error Messages --- *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Validation Summary for Model Errors *@
    <div asp-validation-summary="All" class="text-danger"></div>

    <h1>@Model.EventName</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@(Model.Category?.CategoryType ?? "General")</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@(Model.EventDate?.ToLongDateString() ?? "TBA")</dd>

                <dt class="col-sm-3">Venue</dt>
                <dd class="col-sm-9">@Model.Venue</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9 text-success fw-bold">LKR @Model.Price</dd>

                <dt class="col-sm-3">Availability</dt>
                <dd class="col-sm-9">
                    @{
                        decimal.TryParse(Model.Availability, out decimal availCount);
                    }
                    @(availCount > 0 ? $"{availCount} seats remaining" : "Sold Out")
                </dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@(Model.Category?.Description ?? "No description available.")</dd>
            </dl>
        </div>

        @* --- Booking Section --- *@
        <div class="col-md-4">
            <div class="card bg-light shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-ticket-detailed"></i> Reserve Your Spot</h5>

                    @if (ViewBag.IsLoggedIn == true)
                    {
                        <form asp-action="BookTickets" method="post">
                            <input type="hidden" name="EventId" value="@Model.EventId" />

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ticket Type:</label>
                                <select class="form-select mb-3" name="ticketTypeId">
                                    @if (ViewBag.SeatTypes != null)
                                    {
                                        foreach (var type in (IEnumerable<dynamic>)ViewBag.SeatTypes)
                                        {
                                            <option value="@type.SeatTypeId">
                                                @type.TypeName (Multiplier: @type.PriceMultiplier)
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option>Standard (1.0)</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Quantity:</label>
                                <input type="number" name="Quantity" value="1" min="1" class="form-control" />
                            </div>

                            @{
                                decimal.TryParse(Model.Availability, out decimal avail);
                            }

                            <button type="submit" class="btn btn-primary w-100" @(avail <= 0 ? "disabled" : "")>
                                @(avail > 0 ? "Book Now" : "Sold Out")
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center p-2">
                            <p class="small text-muted mb-2">Please login to reserve your tickets</p>
                            <a href="/Account/Login?returnUrl=@Context.Request.Path" class="btn btn-outline-primary btn-sm w-100">Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <hr />

    @* --- Review Submission Form --- *@
    @if (ViewBag.IsLoggedIn == true)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Share Your Experience</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Event" asp-action="AddReview" method="post">
                    <input type="hidden" name="EventId" value="@Model.EventId" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Your Rating</label>
                        <div class="rating-wrapper">
                            <input type="radio" id="star-5" name="Rating" value="5" required />
                            <label for="star-5">⭐</label>

                            <input type="radio" id="star-4" name="Rating" value="4" />
                            <label for="star-4">⭐</label>

                            <input type="radio" id="star-3" name="Rating" value="3" />
                            <label for="star-3">⭐</label>

                            <input type="radio" id="star-2" name="Rating" value="2" />
                            <label for="star-2">⭐</label>

                            <input type="radio" id="star-1" name="Rating" value="1" />
                            <label for="star-1">⭐</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Your Comment</label>
                        <textarea name="Comment" class="form-control" rows="3" placeholder="Tell us about the event..." required></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">Submit Review</button>
                </form>
            </div>
        </div>
    }

    @* --- Reviews List --- *@
    <h3>Community Reviews</h3>
    <div class="mt-3">
        @if (ViewBag.Reviews != null)
        {
            foreach (var review in (IEnumerable<dynamic>)ViewBag.Reviews)
            {
                <div class="card mb-3 shadow-sm border-start border-primary border-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted fw-bold">By: @(review.Member?.Fullname ?? "Anonymous")</small>

                            @if (ViewBag.IsLoggedIn == true && Context.Session.GetString("UserId") == Convert.ToString(review.MemberId))
                            {
                                <div>
                                    <a asp-action="EditReview" asp-route-id="@review.ReviewId" class="btn btn-sm btn-outline-secondary py-0">Edit</a>

                                    <form asp-action="DeleteReview" asp-route-id="@review.ReviewId" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger py-0"
                                                onclick="return confirm('Are you sure you want to delete this review?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mb-1">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <span style="color: #ffc107;">⭐</span>
                                    }
                                    else
                                    {
                                        <span style="filter: grayscale(100%); opacity: 0.3;">⭐</span>
                                    }
                                }
                                <span class="ms-2 text-muted small">(@review.Rating/5)</span>
                            </div>
                        </div>
                        <p class="mb-0 italic text-muted">"@review.Comments"</p>
                    </div>
                </div>
            }
        }
    </div>

    <div class="mt-4 mb-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Portal</a>
    </div>
</div>