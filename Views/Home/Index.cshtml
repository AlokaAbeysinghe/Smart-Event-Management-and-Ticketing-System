@model IEnumerable<Smart_Event_Management_and_Ticketing_System.Models.Event>
@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Cultural Council Portal</h1>
        <p class="lead text-muted">Modernizing local events for our community.</p>
    </div>

    @* Search Bar *@
    <form asp-controller="Home" asp-action="Index" method="get" class="mb-4">
        <div class="input-group shadow-sm">
            <input type="text" name="searchString" class="form-control" 
                   placeholder="Search by name, category, venue, price, or date..." 
                   value="@Context.Request.Query["searchString"]" />

            <button type="submit" class="btn btn-primary px-4">Search</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    <h3 class="mb-4">Upcoming Events</h3>
    <div class="row">
        @if (!Model.Any())
        {
                <div class="col-12">
                    <div class="alert alert-warning text-center">
                        No events found matching your search.
                    </div>
                </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm border-0 transition-hover">
                                <div class="card-body">
                            @* Fixed: Accessing CategoryType through the Category navigation property *@
                                    <span class="badge bg-info text-dark mb-2">@(item.Category?.CategoryType ?? "General")</span>

                            @* Fixed: Name changed to EventName *@
                                    <h5 class="card-title fw-bold">@item.EventName</h5>

                                    <p class="card-text text-muted small">
                                @* Fixed: EventDate is now nullable, using ?.ToShortDateString() *@
                                        <strong>Date:</strong> @(item.EventDate?.ToShortDateString() ?? "TBA")<br />
                                        <strong>Venue:</strong> @item.Venue
                                    </p>
                                    <h6 class="text-success fw-bold">LKR @item.Price</h6>
                                </div>
                                <div class="card-footer bg-white border-0 pb-3">
                            @* Fixed: Id changed to EventId *@
                                    <a href="@Url.Action("Details", "Event", new { id = item.EventId })" class="btn btn-primary w-100 shadow-sm">View Details</a>
                                </div>
                            </div>
                        </div>
            }
        }
    </div>
</div>